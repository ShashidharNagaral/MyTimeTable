<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    android:id="@+id/card_table_container">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_weight="3"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/starttimeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@+id/starttimeID"
                android:src="@drawable/line" />
            <TextView
                android:id="@+id/endtimeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/starttimeID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="40dp"
            android:background="@color/colorPrimary"
            android:layout_width="70dp"
            android:layout_weight="10"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/subjectID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/classroomID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectID"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/teacherID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classroomID"
                android:textAlignment="textStart"
                android:textSize="15dp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>